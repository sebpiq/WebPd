{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2021",
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "../src/build/outputs/app/runtime.main.ts"
    ],
    "exclude": [
        "../src/**/*.test.ts",
        "../src/**/*.test.*.ts",
        "../src/**/*test-helpers*"
    ]
}
